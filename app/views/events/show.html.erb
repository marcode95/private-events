<div class="card text-center mx-auto">
  <div class="card-body">
    <h1 class="card-title mb-3"><%= @event.title %></h1>
      <h3>Description:</h3>
      <%= @event.description %>
      <h3>Date:</h3>
      <%= @event.date %>
      <h3>Creator:</h3>
        <%= @event.creator.name %> 
      <h3>Attendees:</h3>
      <% @event.attendees.each do |attendee| %>
        <%= attendee.name %>
      <% end %>
    <br>
    <%= link_to 'Back', events_path, class: "link" %>
  </div>
  
  <%= form_with(model: @event_attendance, url: event_attendances_create_path, local: true) do |form| %>
    <div class="forms mb-4">
      <%= form.hidden_field :@event_id, class: 'form-control', value: @event.id %>
      <div class="actions">
        <%= form.submit 'Attend event', class: 'btn btn-primary btn-block mt-2' %>
      </div>
    </div>
  <% end %>  
</div>

